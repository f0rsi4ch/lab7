def recursive_list_sum(data_list: list[int]) -> int:
    if not data_list:
        return 0
    else:
        return data_list[0] + recursive_list_sum(data_list[1:])

user_input = input("Введіть числа через пробіл: ")
try:
    numbers = [int(x) for x in user_input.split()]
    print(recursive_list_sum(numbers))
except ValueError:
    print("Помилка: Введено не цілі числа.")
except Exception as e:
    print(f"Виникла помилка: {e}")
